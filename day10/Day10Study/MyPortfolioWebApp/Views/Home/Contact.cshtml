@model MyPortfolioWebApp.Models.ContactModel
@{
    ViewData["Title"] = "Contact";
}
<!-- Contact Section -->
<section id="contact" class="contact section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>문의</h2>
        <p>스카웃 등에 관한 문의사항이 있을시 연락 바랍니다</p>
    </div><!-- End Section Title -->

    <div class="container" data-aos="fade-up" data-aos-delay="100">

        <div class="row gy-4">

            <div class="col-lg-5">

                <div class="info-wrap">
                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="200">
                        <i class="bi bi-geo-alt flex-shrink-0"></i>
                        <div>
                            <h3>주소</h3>
                            <p>365, Sinseon-ro, Nam-gu, Busan, Republic of Korea</p>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="300">
                        <i class="bi bi-telephone flex-shrink-0"></i>
                        <div>
                            <h3>연락처</h3>
                            <p>+82 051 629 5233</p>
                        </div>
                    </div><!-- End Info Item -->

                    <div class="info-item d-flex" data-aos="fade-up" data-aos-delay="400">
                        <i class="bi bi-envelope flex-shrink-0"></i>
                        <div>
                            <h3>이메일</h3>
                            <p>doo062991@gmail.com</p>
                        </div>
                    </div><!-- End Info Item -->

                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d52216.976289204336!2d129.0662222358698!3d35.117670945137625!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3568ec6a60a7304b%3A0x106ee20ccaf002d9!2z67aA7IKw6rSR7Jet7IucIOyaqeuLueuPmSDsi6DshKDroZw!5e0!3m2!1sko!2skr!4v1748489872173!5m2!1sko!2skr" frameborder="0" style="border:0; width: 100%; height: 270px;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>

            <div class="col-lg-7">
                <form asp-action="Contact" method="post" class="php-email-form" data-aos="fade-up" data-aos-delay="200">
                    @* <div asp-validation-summary="All" class="text-danger"></div> *@
                    <div class="row gy-4">

                        <div class="col-md-6">
                            <label asp-for="Name" class="pb-2">성함</label>
                            <input type="text" asp-for="Name" id="name-field" class="form-control">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Email" class="pb-2">이메일</label>
                            <input type="email" class="form-control" asp-for="Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Subject" class="pb-2">제목</label>
                            <input type="text" class="form-control" asp-for="Subject">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>

                        <div class="col-md-12">
                            <label asp-for="Message" class="pb-2">메시지</label>
                            <textarea class="form-control" rows="10" asp-for="Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 text-center">
                            <div class="loading" hidden>로딩중</div>
                            <div class="error-message" hidden></div>
                            <div class="sent-message" hidden>메시지를 전송했습니다. 감사합니다!</div>

                            <button type="submit">전송</button>
                        </div>

                    </div>
                </form>
            </div><!-- End Contact Form -->

        </div>

    </div>

</section><!-- /Contact Section -->